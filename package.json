{
  "name": "abdulsalam_turborepo",
  "version": "1.0.0",
  "description": "A simple Turborepo project with an Express server.",
  "main": "server.js",
  "scripts": {
  "dev": "pnpm turbo run dev",
  "dev:nextjs-app1": "pnpm turbo run dev --filter=nextjs-app1",
  "dev:nextjs-app2": "pnpm turbo run dev --filter=nextjs-app2",
  "dev:nextjs-app3": "pnpm turbo run dev --filter=nextjs-app3",
  "build": "pnpm turbo run build",
  "build:nextjs-app1": "pnpm turbo run build --filter=nextjs-app1",
  "build:nextjs-app2": "pnpm turbo run build --filter=nextjs-app2",
  "build:nextjs-app3": "pnpm turbo run build --filter=nextjs-app3",
  "start": "node server.js",
  "dev:server": "nodemon server.js"
},

  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "turborepo": "^0.0.1"
  },
  "dependencies": {
    "express": "^4.21.1",
    "swiper": "^11.2.2"
  },
  "packageManager": "pnpm@9.12.1"
}
